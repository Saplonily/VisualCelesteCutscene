<Window x:Class="VisualCelesteCutscene.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualCelesteCutscene"
        xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
        mc:Ignorable="d" SnapsToDevicePixels="True" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Title="选择颜色">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <colorpicker:StandardColorPicker x:Name="colorPicker" Width="200" Height="380" VerticalAlignment="Top"
                                     ShowAlpha="False">
    </colorpicker:StandardColorPicker>
    <Button Content="确认" Padding="16 4" Margin="8 0" FontSize="18" Grid.Row="1" 
            VerticalAlignment="Center" Click="Button_Click"/>
  </Grid>
</Window>
